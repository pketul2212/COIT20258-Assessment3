
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ths.enhanced.client.controller.PatientController">
  <top><Label text="Patient Dashboard"/></top>
  <center>
    <GridPane hgap="10" vgap="10" style="-fx-padding:12;">
      <Label text="Patient ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="patientIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
      <Label text="Specialist ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <TextField fx:id="specialistIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
      <Label text="StartAt (YYYY-MM-DDTHH:MM):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
      <TextField fx:id="startAtField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
      <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
      <TextField fx:id="notesField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
      <Button text="Book" onAction="#onBook" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
      <Separator GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
      <Button text="List Reminders" onAction="#onListReminders" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>
  </center>
  <bottom><TextArea fx:id="output" prefRowCount="8"/></bottom>
</BorderPane>
