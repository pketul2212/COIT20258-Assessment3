
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ths.enhanced.client.controller.StaffController">
  <top><Label text="Staff Dashboard"/></top>
  <center>
    <GridPane hgap="10" vgap="10" style="-fx-padding:12;">
      <Label text="Appointment ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="appointmentIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
      <Label text="New StartAt:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <TextField fx:id="newStartAtField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
      <Button text="Reschedule" onAction="#onReschedule" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
      <Button text="Cancel" onAction="#onCancel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
  </center>
  <bottom><TextArea fx:id="output" prefRowCount="8"/></bottom>
</BorderPane>
