
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ths.enhanced.client.controller.SpecialistController">
  <top><Label text="Specialist Dashboard"/></top>
  <center>
    <GridPane hgap="10" vgap="10" style="-fx-padding:12;">
      <Label text="Specialist ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="specialistIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
      <Label text="StartAt (YYYY-MM-DDTHH:MM):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <TextField fx:id="startAtField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
      <Label text="EndAt (YYYY-MM-DDTHH:MM):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
      <TextField fx:id="endAtField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
      <Button text="Add Availability" onAction="#onAddAvailability" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
      <Button text="List Availability" onAction="#onListAvailability" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>
  </center>
  <bottom><TextArea fx:id="output" prefRowCount="10"/></bottom>
</BorderPane>
