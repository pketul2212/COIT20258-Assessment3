<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="412.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StaffDashboardController">
   <children>
      <Pane prefHeight="412.0" prefWidth="139.0" style="-fx-background-color: #008080;">
         <children>
            <Label layoutX="26.0" layoutY="38.0" prefHeight="27.0" prefWidth="87.0" style="-fx-text-fill: #ffffff;" text="Telehealth">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label layoutX="15.0" layoutY="86.0" onMouseClicked="#openStaffDashboard" prefHeight="27.0" prefWidth="129.0" style="-fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Dashboard" /> <!-- Highlighted -->
            <Label layoutX="15.0" layoutY="340.0" prefHeight="27.0" prefWidth="129.0" style="-fx-text-fill: #ffffff;" text="Profile" />
         </children>
      </Pane>

      <Pane layoutX="139.0" prefHeight="412.0" prefWidth="561.0" style="-fx-background-color: #f0f0f0;">
         <children>
            <Label layoutX="480.0" layoutY="19.0" prefHeight="27.0" prefWidth="70.0" style="-fx-text-fill: #008080;" text="Profile" />
            <Label layoutX="23.0" layoutY="26.0" prefHeight="27.0" prefWidth="87.0" style="-fx-text-fill: #008080;" text="Telehealth">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>

            <Pane layoutX="23.0" layoutY="66.0" prefHeight="320.0" prefWidth="515.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Staff Dashboard - Manage Appointments" />

                  <Label layoutX="14.0" layoutY="50.0" text="Search Patient by ID:" />
                  <TextField fx:id="patientIdSearchField" layoutX="150.0" layoutY="46.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Patient ID" />
                  <Button fx:id="searchButton" layoutX="360.0" layoutY="46.0" mnemonicParsing="false" onAction="#handleSearchPatient" prefHeight="25.0" prefWidth="70.0" style="-fx-background-color: #008080; -fx-text-fill: #ffffff;" text="Search" />

                  <TableView fx:id="appointmentsTableView" layoutX="14.0" layoutY="90.0" prefHeight="150.0" prefWidth="487.0">
                    <columns>
                      <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="patientNameColumn" prefWidth="100.0" text="Patient" />
                       <TableColumn fx:id="dateTimeColumn" prefWidth="120.0" text="Date &amp; Time" />                      <TableColumn fx:id="specialistColumn" prefWidth="100.0" text="Specialist" />
                      <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Status" />
                    </columns>
                  </TableView>

                  <Label layoutX="14.0" layoutY="250.0" text="Selected Appointment Actions:" />
                  <Button fx:id="modifyButton" layoutX="180.0" layoutY="246.0" mnemonicParsing="false" onAction="#handleModifyAppointment" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #008080; -fx-text-fill: #ffffff;" text="Modify..." />
                  <Button fx:id="cancelButton" layoutX="290.0" layoutY="246.0" mnemonicParsing="false" onAction="#handleCancelAppointment" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #ff4444; -fx-text-fill: #ffffff;" text="Cancel..." />
                  <Button fx:id="refreshButton" layoutX="400.0" layoutY="246.0" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #cccccc;" text="Refresh" />

               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</AnchorPane>