<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AddDoctorController"
      spacing="12" alignment="CENTER_LEFT"
      prefWidth="520" prefHeight="460" style="-fx-padding:20">

    <Label text="Add Doctor (Specialist)" style="-fx-font-size:20; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Full Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField" promptText="Dr Jane Smith"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="drjane@example.com"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Create login password"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Specialty" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="specialtyField" promptText="Dermatology"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Phone" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="123123123"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Create Doctor" onAction="#handleCreate"
                style="-fx-background-color:#007f72; -fx-text-fill:white; -fx-font-weight:bold;"/>
        <Button text="Close" onAction="#handleClose"/>
    </HBox>

</VBox>
